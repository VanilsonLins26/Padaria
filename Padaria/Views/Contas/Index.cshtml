@model IEnumerable<Conta>

@{
    ViewData["Title"] = "Contas";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <form class="form-inline" asp-action="UnicSearch">
                <div class="input-group mb-2">
                    <label class="input-group-text">Busca Única:</label>
                    <input type="date" name="data" class="form-control" value="@ViewBag.Data?.ToString("yyyy-MM-dd")" />
                    <button type="submit" class="btn btn-info">Filtrar</button>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form class="form-inline" asp-action="RangeSearch">
                <div class="input-group mb-2">
                    <label class="input-group-text">Busca por Intervalo:</label>
                    <input type="date" name="dataInicial" class="form-control" value="@ViewBag.DataInicial?.ToString("yyyy-MM-dd")" />
                    <input type="date" name="dataFinal" class="form-control" value="@ViewBag.DataFinal?.ToString("yyyy-MM-dd")" />
                    <button type="submit" class="btn btn-info">Filtrar</button>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Data)</th>
                <th>@Html.DisplayNameFor(model => model.ValorTotal)</th>
                <th>@Html.DisplayNameFor(model => model.MetodoPagamento)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Id)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MetodoPagamento)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>