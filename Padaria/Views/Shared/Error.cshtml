@model Padaria.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-danger">
                    <div class="card-body">
                        <h1 class="text-center text-danger display-3">
                            <i class="bi bi-exclamation-triangle-fill"></i> Erro
                        </h1>
                        <h2 class="text-center text-danger">@Model.Message</h2>

                        @if (Model.ShowRequestId)
                        {
                            <div class="mt-4">
                                <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
                            </div>
                        }

                        <div class="mt-5 text-center">
                            <a href="/" class="btn btn-outline-danger btn-lg">Voltar para a página inicial</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
  
</body>
