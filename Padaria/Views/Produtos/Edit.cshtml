@model Padaria.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<h1 class="mt-4 mb-4">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="QntDisponiveis"/>
            <input type="hidden" asp-for="QntVendidas" />

            <div class="form-group mb-3">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ValorUnitario" class="form-label"></label>
                <input id="preco" asp-for="ValorUnitario" value="@Model.ValorUnitario.ToString("F2")" class="form-control" />
                <span asp-validation-for="ValorUnitario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tipo" class="form-label"></label>
                <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<Padaria.Models.Enums.Tipo>()" class="form-select"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Adicionar ao estoque</label>
                <input type="number" name="quantidade" value="0" class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-info" />
                
            </div>
        </form>
    </div>
</div>



@section Scripts {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#preco').mask('000.000.000.000.000,00', { reverse: true });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/js/jquery.validate.pt-BR.js")"></script>
}