@model Padaria.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1 class="mt-4 mb-4">@ViewData["Title"]</h1>

<div class="card mb-4">
    <div class="card-header">
        <h4>Produto: @Html.DisplayFor(model => model.Nome)</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-sm-2">
                <strong>Código:</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Codigo)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-2">
                <strong>Nome:</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-2">
                <strong>Preço:</strong>
            </div>
            <div class="col-sm-10">
                R$ @Html.DisplayFor(model => model.Preco)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-2">
                <strong>Tipo:</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Tipo)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-2">
                <strong>Disponível:</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.QntDisponiveis)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-2">
                <strong>Vendas:</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.QntVendidas)
            </div>
        </div>
       
    </div>
    <div class="card-footer text-end">
        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.Id">Excluir</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>