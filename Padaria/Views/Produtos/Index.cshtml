@model IEnumerable<Padaria.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Adicionar Produto</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Nome)</a>
                
            </td>
            <td>
                    R$ @Html.DisplayFor(modelItem => item.Preco)/@Html.DisplayFor(modelItem => item.Tipo)
            </td>
            
        </tr>
}
    </tbody>
</table>
