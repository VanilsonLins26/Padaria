@model Encomenda;

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col-sm-12">
            <h4>Conta n° @Model.Id</h4>
        </div>
    </div>

    <hr />

    <dl class="row mb-4">
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.MetodoPagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetodoPagamento)
        </dd>
    </dl>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Produtos.FirstOrDefault().Quantidade)
                </th>
                <th>
                    Produto
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Produtos.FirstOrDefault().Total)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Produtos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="table-dark">
                <td colspan="2" class="text-right"><strong>Valor Total:</strong></td>
                <td>
                    @Html.DisplayFor(model => model.ValorTotal)
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar</a>
    </div>
</div>