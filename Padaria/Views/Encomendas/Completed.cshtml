@model IEnumerable<Encomenda>

@{
    ViewData["Title"] = "Concluídos";
    var contasList = Model.ToList();
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-end mb-4">
        
        <a asp-action="Index" class="btn btn-secondary">Em andamento</a>
    </div>

    <form class="form-inline mb-4" asp-action="Search">
        <div class="input-group">
            <span class="input-group-text">Data Inicial:</span>
            <input type="date" name="dataInicial" class="form-control" value="@ViewBag.DataInicial?.ToString("yyyy-MM-dd")" />
            <span class="input-group-text">Data Final:</span>
            <input type="date" name="dataFinal" class="form-control" value="@ViewBag.DataFinal?.ToString("yyyy-MM-dd")" />
            <button type="submit" class="btn btn-primary ms-2">Filtrar</button>
        </div>
    </form>

   
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Data)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ValorTotal)</th>
                        <th>@Html.DisplayNameFor(model => model.First().MetodoPagamento)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Cliente.Nome)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Id)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Data)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ValorTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MetodoPagamento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cliente.Nome)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    
</div>