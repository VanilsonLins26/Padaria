@model Padaria.Models.ViewModels.EncomendaViewModel

@{
    ViewData["Title"] = "Nova Encomenda";

}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <form asp-action="AddProduto">
        <div class="row mb-3">
            <div class="col-md-6">
                <label>Cliente: </label>
                <div class="input-group">
                    <input name="cliente" type="text" class="form-control" placeholder="Digite o nome do cliente" />
                    <select asp-for="Cliente.Id" asp-items="@(new SelectList(Model.Clientes, "Id", "Nome"))" class="form-select">
                        <option value="">Selecione o cliente</option>
                    </select>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CriarEncomenda">
                        Adicionar Cliente
                    </button>
                </div>
            </div>
            <div class="col-md-6">
                <button type="submit" formaction="@Url.Action("SearchCliente", "Encomendas")" class="btn btn-secondary" style="display: none"></button>
            </div>
        </div>

        <div class="mb-3">
            <label>Produto: </label>
            <input id="codigoInput" name="codigo" type="text" class="form-control" placeholder="Digite o código do produto" />
            <button id="adicionarBtn" class="btn btn-info mt-2" type="submit">Adicionar</button>
        </div>

        @if (Model != null && Model.ProdutosConta.Count > 0)
        {
            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th>Quantidade</th>
                        <th>Produto</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ProdutosConta.Count; i++)
                    {
                        <tr>
                            <td><input type="number" asp-for="@Model.ProdutosConta[i].Quantidade" value="@Model.ProdutosConta[i].Quantidade" class="quantidadeInput" /></td>
                            <td>@Html.DisplayFor(p => p.ProdutosConta[i].Produto.Nome)</td>
                            <td>@Html.DisplayFor(p => p.ProdutosConta[i].Total)</td>
                        </tr>
                        <input type="hidden" asp-for="@Model.ProdutosConta[i].Quantidade" value="@Model.ProdutosConta[i].Quantidade" />
                        <input type="hidden" asp-for="@Model.ProdutosConta[i].ProdutoId" value="@Model.ProdutosConta[i].ProdutoId" />
                        <input type="hidden" asp-for="@Model.ProdutosConta[i].Total" value="@Model.ProdutosConta[i].Total" />
                    }
                </tbody>
            </table>
        }
        
    </form>

    @if (Model != null && ViewBag.Total != null)
    {
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="@Model.Encomenda.Data" class="form-label">Entrega: </label>
                <input asp-for="@Model.Encomenda.Data" class="form-control" />
                <input type="hidden" asp-for="@Model.Encomenda.DataPedido" value="@DateTime.Now" />
                <input type="hidden" asp-for="@Model.Encomenda.MetodoPagamento" value="0" />
                <input type="hidden" asp-for="@Model.Encomenda.Status" value="0" />
                <span asp-validation-for="@Model.Encomenda.Data" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Encomenda.Obs" class="form-label"></label>
                <input asp-for="@Model.Encomenda.Obs" class="form-control" placeholder="Insira alguma observação, se necessário" />
                <span asp-validation-for="@Model.Encomenda.Obs" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Encomenda.ValorTotal" class="form-label">Total: R$ @ViewBag.Total.ToString("F2")</label>
                <input type="hidden" asp-for="@Model.Encomenda.ValorTotal" value="@ViewBag.Total" />
            </div>

            @for (int i = 0; i < Model.ProdutosConta.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Encomenda.Produtos[i].Quantidade" value="@Model.ProdutosConta[i].Quantidade" />
                <input type="hidden" asp-for="@Model.Encomenda.Produtos[i].ProdutoId" value="@Model.ProdutosConta[i].ProdutoId" />
                <input type="hidden" asp-for="@Model.Encomenda.Produtos[i].Total" value="@Model.ProdutosConta[i].Total" />
                <input type="hidden" asp-for="@Model.Encomenda.Cliente.Id" value="@Model.Cliente.Id" />
            }

            <button type="submit" class="btn btn-info">Finalizar</button>
        </form>
    }

    <div class="modal fade" id="CriarEncomenda" tabindex="-1" aria-labelledby="CriarEncomendaLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Adicionar Cliente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="Create" asp-controller="Clientes">
                        <div class="form-group mb-3">
                            <label asp-for="@Model.Cliente.Nome" class="form-label"></label>
                            <input asp-for="@Model.Cliente.Nome" class="form-control" placeholder="Digite o nome do cliente" />
                            <span asp-validation-for="@Model.Cliente.Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="@Model.Cliente.Contato" class="form-label"></label>
                            <input asp-for="@Model.Cliente.Contato" class="form-control" id="telefone" placeholder="Digite o número do cliente" />
                            <span asp-validation-for="@Model.Cliente.Contato" class="text-danger"></span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                            <button type="submit" class="btn btn-primary">Salvar alterações</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#telefone').mask('(00) 00000-0000');
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>

        document.getElementById('codigoInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault(); // Impede o envio do formulário
                document.getElementById('adicionarBtn').click(); // Dispara o botão de adicionar
            }
        });

        // Adiciona o evento para todos os inputs de quantidade
        document.querySelectorAll('.quantidadeInput').forEach(function (input) {
            input.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault(); // Impede o envio do formulário
                    document.getElementById('adicionarBtn').click(); // Dispara o botão de adicionar
                }
            });
        });
    </script>



}